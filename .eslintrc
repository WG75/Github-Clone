{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "extends": ["airbnb", "plugin:flowtype/recommended"],
    "plugins": ["flowtype"],
    "rules": {
      "semi": ["error", "always"],
      "react/jsx-filename-extension": "off",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": ["Link"],
          "specialLink": ["to", "hrefLeft", "hrefRight"],
          "aspects": ["noHref", "invalidHref", "preferButton"]
        }
      ]
    }
  }
  